@page
@model PaymentDetailsModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "admin")]
@{
    ViewData["Title"] = "Payment Details";
    var pageNumber = Model.PageNumber;
    var totalPages = Model.TotalPages;
    var allEvents = Model.AllEvents;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<main class="flex-grow-1 d-flex flex-column  bg-light" style="background: transparent; min-height: calc(100vh - 150px);">
    <div class="container-fluid flex-grow-1 d-flex flex-column justify-content-start align-items-center px-1 px-sm-3 px-md-4 py-3 py-md-4" style="padding-bottom: 24px;">
        <div class="row w-100 justify-content-center align-items-start gy-4">
            <div class="col-12 p-0">
                <div class="mb-0">
                    <!-- Event Info and Search (below header row) -->
                    <div class="row g-2 mb-3 align-items-center">
                        <div class="col text-center text-sm-start mb-2 mb-sm-0">
                            <h3 class="fw-bold mb-0">Payment Details</h3>
                            <div class="small mt-1">
                                <span class="fw-semibold">Event Name:</span> <span class="text-primary">@allEvents.FirstOrDefault()?.EventName</span><br />
                                <span class="fw-semibold">Winner Announcement:</span> <span class="text-success js-utc-date" data-utc="@allEvents.FirstOrDefault()?.WinnerAnnouncementDate.ToString("yyyy-MM-ddTHH:mm:ssZ")"></span>
                            </div>
                            <div class="col-auto ms-auto">
                                @if (User.IsInRole("admin"))
                                {
                                    <form method="get" class="d-flex justify-content-end" style="max-width: 350px; gap: 0.5rem;margin-top: 6px;">
                                        <div class="input-group">
                                            <input type="text" name="SearchUserName" class="form-control" placeholder="Search by username..." value="@Model.SearchUserName" />
                                            <button type="submit" class="btn btn-primary">Search</button>
                                        </div>
                                        <a href="@Url.Page(null)" class="btn btn-primary">Clear</a>
                                    </form>
                                }
                            </div>
                        </div>
                        <div class="col-12 col-md-4 col-lg-2">
                            <div class="card shadow-sm border-0 rounded-4 text-center py-3 bg-white ">
                                <div class="fw-semibold text-muted mb-1">Total Users</div>
                                <div class="display-6 fw-bold text-primary">@Model.TotalUsers</div>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive rounded-4 shadow-sm border bg-white p-3">
                        <table class="table table-hover align-middle mb-0 w-100" style="min-width: 480px;">
                            <thead class="table-light" style="background: #e3e6f0;">
                                <tr>
                                    <th>
                                        <a asp-page="PaymentDetails" asp-route-SortColumn="UserName" asp-route-SortDirection="@(Model.SortColumn == "UserName" && Model.SortDirection == "asc" ? "desc" : "asc")" asp-route-SearchUserName="@Model.SearchUserName">
                                            User Name
                                            @if (Model.SortColumn == "UserName") {
                                                <span class="@(Model.SortDirection == "asc" ? "bi bi-caret-up-fill" : "bi bi-caret-down-fill")"></span>
                                            }
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-page="PaymentDetails" asp-route-SortColumn="Email" asp-route-SortDirection="@(Model.SortColumn == "Email" && Model.SortDirection == "asc" ? "desc" : "asc")" asp-route-SearchUserName="@Model.SearchUserName">
                                            Email
                                            @if (Model.SortColumn == "Email") {
                                                <span class="@(Model.SortDirection == "asc" ? "bi bi-caret-up-fill" : "bi bi-caret-down-fill")"></span>
                                            }
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-page="PaymentDetails" asp-route-SortColumn="Amount" asp-route-SortDirection="@(Model.SortColumn == "Amount" && Model.SortDirection == "asc" ? "desc" : "asc")" asp-route-SearchUserName="@Model.SearchUserName">
                                            Amount ($)
                                            @if (Model.SortColumn == "Amount") {
                                                <span class="@(Model.SortDirection == "asc" ? "bi bi-caret-up-fill" : "bi bi-caret-down-fill")"></span>
                                            }
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-page="PaymentDetails" asp-route-SortColumn="PaymentStatus" asp-route-SortDirection="@(Model.SortColumn == "PaymentStatus" && Model.SortDirection == "asc" ? "desc" : "asc")" asp-route-SearchUserName="@Model.SearchUserName">
                                            Payment Status
                                            @if (Model.SortColumn == "PaymentStatus") {
                                                <span class="@(Model.SortDirection == "asc" ? "bi bi-caret-up-fill" : "bi bi-caret-down-fill")"></span>
                                            }
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-page="PaymentDetails" asp-route-SortColumn="PaidOn" asp-route-SortDirection="@(Model.SortColumn == "PaidOn" && Model.SortDirection == "asc" ? "desc" : "asc")" asp-route-SearchUserName="@Model.SearchUserName">
                                            Paid On
                                            @if (Model.SortColumn == "PaidOn") {
                                                <span class="@(Model.SortDirection == "asc" ? "bi bi-caret-up-fill" : "bi bi-caret-down-fill")"></span>
                                            }
                                        </a>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (allEvents != null && allEvents.Count > 0)
                                {
                                    foreach (var evt in allEvents.Where(e => e.PaymentStatus == "Paid"))
                                    {
                                        <tr>
                                            <td class="text-break">@evt.UserName</td>
                                            <td class="text-break">@evt.Email</td>
                                            <td class="fw-semibold text-success">$@evt.Amount</td>
                                            <td>
                                                @if (evt.PaymentStatus == "Paid") {
                                                    <span class="badge bg-success">Paid</span>
                                                } else if (evt.PaymentStatus == "Pending") {
                                                    <span class="badge bg-warning text-dark">Pending</span>
                                                } else if (evt.PaymentStatus == "Failed") {
                                                    <span class="badge bg-danger">Failed</span>
                                                } else {
                                                    <span class="badge bg-secondary">Not Paid</span>
                                                }
                                            </td>
                                            <td>
                                                @if (evt.PaidOn != null && evt.PaidOn != DateTime.MinValue)
                                                {
                                                    <span class="js-utc-date" data-utc="@evt.PaidOn.ToString("yyyy-MM-ddTHH:mm:ssZ")"></span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">No payment records found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="w-100 mt-3 d-flex justify-content-center">
                        @if (totalPages > 1)
                        {
                            <nav aria-label="Admin pagination" class="mb-2">
                                <ul class="pagination justify-content-center flex-nowrap my-1" style="min-width: 340px;">
                                    <li class="page-item @(pageNumber == 1 ? "disabled" : "")">
                                        <a class="page-link" href="?pageNumber=@(pageNumber - 1)" tabindex="-1">Previous</a>
                                    </li>
                                    @for (int i = 1; i <= totalPages; i++)
                                    {
                                        <li class="page-item @(i == pageNumber ? "active" : "")">
                                            <a class="page-link" href="?pageNumber=@i">@i</a>
                                        </li>
                                    }
                                    <li class="page-item @(pageNumber == totalPages ? "disabled" : "")">
                                        <a class="page-link" href="?pageNumber=@(pageNumber + 1)">Next</a>
                                    </li>
                                </ul>
                            </nav>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(function () {
        $('.js-utc-date').each(function () {
            var utc = $(this).data('utc');
            if (utc) {
                // Fix: Replace all periods with colons in time portion for ISO 8601 compatibility
                var fixedUtc = utc.replace(/T(\d{2})\.(\d{2})\.(\d{2})Z/, function(_, h, m, s) {
                    return 'T' + h + ':' + m + ':' + s + 'Z';
                });
                var date = new Date(fixedUtc);
                if (!isNaN(date.getTime())) {
                    var options = {
                        year: 'numeric',
                        month: 'short',
                        day: '2-digit',
                        hour: '2-digit',
                        minute: '2-digit',
                        hour12: true
                    };
                    $(this).text(date.toLocaleString(undefined, options));
                } else {
                    $(this).text(utc);
                }
            }
        });
    });
</script>
