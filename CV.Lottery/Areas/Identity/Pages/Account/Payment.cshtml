@page
@model PaymentModel
@{
    ViewData["Title"] = "Payment";
    var registrationSuccess = TempData["RegistrationSuccess"] != null && (bool)TempData["RegistrationSuccess"];
}
<div class="container mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-10">
            <div class="d-flex align-items-center mb-3">
                <i class="bi bi-currency-dollar text-success fs-3 me-2"></i>
                <span class="fs-4 fw-bold text-success">Payment</span>
                <span class="ms-auto fs-4 fw-bold text-dark">$ @Model.PaymentAmount</span>
            </div>
            <div class="card shadow-sm border-0 rounded-4 mb-4">
                <div class="card-body p-4">
                    <div class="mb-3 pb-2 border-bottom">
                        <h5 class="fw-bold text-center mb-0">Summary</h5>
                    </div>
                    <div class="mb-2 px-2">
                        <div class="d-flex justify-content-between"><span>Package Cost</span><span class="fw-bold">$ @Model.PaymentAmount</span></div>
                        <div class="d-flex justify-content-between"><span>Additional Attendees Cost</span><span class="fw-bold">$ 0</span></div>
                        <div class="d-flex justify-content-between"><span>Additional Hotels Cost</span><span class="fw-bold">$ 0</span></div>
                    </div>
                    <div class="mt-3 p-3 rounded-3" style="background:#f7b2a3;">
                        <div class="text-center mb-1">
                            <span class="text-primary fs-5">Non-donors</span>
                        </div>
                        <div class="text-center fw-bold fs-4">Total Amount Due: <span class="text-danger">$ @Model.PaymentAmount</span></div>
                    </div>
                </div>
            </div>
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4">
                    <div class="text-center mb-3">
                        <img src="https://img.icons8.com/color/48/000000/bank-card-back-side.png" style="width:40px;" alt="card">
                        <span class="fs-4 fw-bold align-middle ms-2">Credit Card</span>
                    </div>
                    <form id="payment-form" method="post" autocomplete="off">
                        <input type="hidden" id="user-id" value="@Model.UserId" />
                        <div class="mb-3">
                            <label for="payment-amount" class="form-label fw-bold">Amount</label>
                            <input type="text" id="payment-amount" class="form-control" value="@Model.PaymentAmount" disabled />
                        </div>
                        <div class="mb-3">
                            <div id="card-element" class="form-control p-3 border border-2 rounded-3" style="min-height:48px;"></div>
                            <div id="card-errors" class="text-danger small mt-2"></div>
                        </div>
                        <button id="submit-payment" class="btn btn-primary w-100 py-2 fw-bold fs-5" type="submit" disabled>
                            Pay now: $ @Model.PaymentAmount
                        </button>
                    </form>
                    <div class="d-flex align-items-center justify-content-between mt-4">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-shield-lock-fill fs-4 text-dark me-2"></i>
                            <span class="fw-semibold">Guaranteed <span class="fw-bold">safe & secure</span> checkout</span>
                        </div>
                        <img src="https://stripe.com/img/v3/home/twitter.png" alt="Stripe" style="height:2em;" class="ms-2" />
                        <span class="badge bg-dark ms-2">Powered by <b>stripe</b></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@if (registrationSuccess)
{
    <div class="toast align-items-center text-white bg-success border-0 show position-fixed top-0 end-0 m-4" id="registration-toast" role="alert" aria-live="assertive" aria-atomic="true" style="z-index: 1055; min-width: 300px;">
        <div class="d-flex">
            <div class="toast-body">
                <strong>Registration successful!</strong> You can now proceed with your payment.
            </div>
        </div>
    </div>
    <script>
        setTimeout(function() {
            var toast = document.getElementById('registration-toast');
            if (toast) toast.style.display = 'none';
        }, 3500);
    </script>
}
@if (Model.PaymentSuccess)
{
    <div class="toast align-items-center text-white bg-success border-0 show position-fixed top-0 end-0 m-4" id="payment-toast" role="alert" aria-live="assertive" aria-atomic="true" style="z-index: 1055; min-width: 300px;">
        <div class="d-flex">
            <div class="toast-body">
                <strong>Payment successful!</strong> Thank you.<br />
                Redirecting to login...
            </div>
        </div>
    </div>
    <script>
        setTimeout(function() {
            window.location = '/Identity/Account/Login';
        }, 3000);
    </script>
}
else if (Model.PaymentFailed && Model.AttemptCount >= 3)
{
    <div class="toast align-items-center text-white bg-danger border-0 show position-fixed bottom-0 end-0 m-4" id="payment-toast" role="alert" aria-live="assertive" aria-atomic="true" style="z-index: 1055; min-width: 300px;">
        <div class="d-flex">
            <div class="toast-body">
                <strong>Maximum attempts reached.</strong> Redirecting to login...
            </div>
        </div>
    </div>
    <script>
        setTimeout(function() {
            window.location = '/Identity/Account/Login';
        }, 3000);
    </script>
}
else if (Model.PaymentFailed)
{
    <div class="alert alert-danger mt-3 text-center">Payment failed. Please try again. Attempt @Model.AttemptCount of 3.</div>
}
@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        #card-element.StripeElement--focus { box-shadow: 0 0 0 2px #0d6efd33; border-color: #0d6efd; }
        #card-element { background: #f8f9fa; transition: box-shadow 0.2s; }
        .position-absolute { position: absolute !important; }
        .end-0 { right: 0 !important; }
        .top-0 { top: 0 !important; }
    </style>
    <script src="https://js.stripe.com/v3/"></script>
    <script src="~/js/payment.js"></script>
}
