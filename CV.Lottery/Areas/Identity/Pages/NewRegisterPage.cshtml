@page
@model CV.Lottery.Areas.Identity.Pages.NewRegisterModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Profile";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<main class="flex-grow-1 d-flex flex-column bg-light" style="background: transparent; min-height: calc(100vh - 150px);">
    <div class="container py-4 d-flex flex-column align-items-center justify-content-center" style="min-height: 80vh;">
        <div class="row w-100 justify-content-center">
            <div class="col-12 col-sm-11 col-md-9 col-lg-7 col-xl-6">
                <div class="card shadow rounded-4 border-0 bg-white p-4">
                    <div class="d-flex align-items-center mb-4" style="gap: 0.75rem;">
                        <i class="bi bi-grid-3x3-gap-fill fs-2 text-primary"></i>
                        <h2 class="fw-bold mb-0" style="font-size:2.1rem;">Profile</h2>
                    </div>
                    <form method="post" autocomplete="off">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Input.EventId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="mb-4">
                            <input asp-for="Input.Email" class="form-control form-control-lg mb-2" placeholder="Email" style="border-radius: 8px;" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label class="fw-bold text-primary mb-2" style="font-size: 1.15rem;">Name</label>
                            <div class="row g-2">
                                <div class="col-12 col-md-4">
                                    <input asp-for="Input.FirstName" class="form-control" placeholder="First Name" style="border-radius: 8px;" />
                                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-md-4">
                                    <input asp-for="Input.MiddleName" class="form-control" placeholder="Middle Name" style="border-radius: 8px;" data-val="false" />
                                    <!-- No validation span for optional field -->
                                </div>
                                <div class="col-12 col-md-4">
                                    <input asp-for="Input.LastName" class="form-control" placeholder="Last Name" style="border-radius: 8px;" />
                                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label class="fw-bold text-primary mb-2" style="font-size: 1.15rem;">Address</label>
                            <div class="row g-2 mb-2 align-items-end">
                                <div class="col-12">
                                    <div class="form-floating mb-2">
                                        <select asp-for="Input.Country" class="form-select fw-bold" id="countrySelect" style="border-radius: 8px;">
                                            <option value="">Country</option>
                                            @foreach (var country in Model.CountryList)
                                            {
                                                <option value="@country.Value">@country.Text</option>
                                            }
                                        </select>
                                        <label for="countrySelect" class="text-muted">Country</label>
                                        <span asp-validation-for="Input.Country" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6 mb-3 position-relative">
                                    <input asp-for="Input.StreetLine1" class="form-control" placeholder="Street Line1" style="border-radius: 8px;" />
                                    <span asp-validation-for="Input.StreetLine1" class="text-danger position-absolute start-0" style="top:100%;"></span>
                                </div>
                                <div class="col-12 col-md-6 mb-3">
                                    <input asp-for="Input.StreetLine2" class="form-control" placeholder="Street Line2" style="border-radius: 8px;" data-val="false" />
                                    <!-- No validation span for optional field -->
                                </div>
                                <div class="col-12 col-md-4 mb-3 position-relative">
                                    <input asp-for="Input.City" class="form-control" placeholder="City" style="border-radius: 8px;" />
                                    <span asp-validation-for="Input.City" class="text-danger position-absolute start-0" style="top:100%;"></span>
                                </div>
                                <div class="col-12 col-md-4 mb-3 position-relative">
                                    <input asp-for="Input.State" class="form-control" placeholder="State" style="border-radius: 8px;" />
                                    <span asp-validation-for="Input.State" class="text-danger position-absolute start-0" style="top:100%;"></span>
                                </div>
                                <div class="col-12 col-md-4 mb-3 position-relative">
                                    <input asp-for="Input.ZipPostal" class="form-control" placeholder="Zip/Postal Code" style="border-radius: 8px;" />
                                    <span asp-validation-for="Input.ZipPostal" class="text-danger position-absolute start-0" style="top:100%;"></span>
                                </div>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label class="fw-bold text-primary mb-2" style="font-size: 1.15rem;">Phone</label>
                            <div class="row g-2">
                                <div class="col-12 col-md-6">
                                    <input asp-for="Input.Mobile" class="form-control" placeholder="Mobile" style="border-radius: 8px;" type="tel" inputmode="numeric" pattern="[0-9]*" oninput="this.value=this.value.replace(/[^0-9]/g,'');" />
                                    <span asp-validation-for="Input.Mobile" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-md-6">
                                    <input asp-for="Input.Home" class="form-control" placeholder="Home" style="border-radius: 8px;" data-val="false" type="tel" inputmode="numeric" pattern="[0-9]*" oninput="this.value=this.value.replace(/[^0-9]/g,'');" />
                                    <!-- No validation span for optional field -->
                                </div>
                            </div>
                        </div>
                        <div class="mb-4 text-end">
                            <button type="submit" class="btn btn-primary px-4 py-2 fw-semibold">Save and continue</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
