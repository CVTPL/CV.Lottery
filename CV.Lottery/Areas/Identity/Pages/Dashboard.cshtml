@page "/Dashboard"
@model DashboardModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@inject SignInManager<IdentityUser> SignInManager

@{
    ViewData["Title"] = "Dashboard";
    var userName = User.Identity?.Name ?? "";
    var pageNumber = Model.PageNumber;
    var totalPages = Model.TotalPages;
    var pageSize = Model.PageSize;
    var allEvents = Model.AllEvents;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

@functions {
    public bool IsAdmin => Model.IsAdmin;
    public List<CV.Lottery.Areas.Identity.Pages.DashboardModel.EventSummary> AllEvents => Model.AllEvents;
}

<main class="flex-grow-1 d-flex flex-column min-vh-100 bg-light" style="background: transparent;">
    <div class="container-fluid flex-grow-1 d-flex flex-column justify-content-start align-items-center px-1 px-sm-3 px-md-4" style="padding-bottom: 24px;">
        <div class="row w-100 justify-content-center align-items-start gy-4 flex-grow-1">
            @if (IsAdmin)
            {
                <div class="col-12">
                    <div class="d-flex justify-content-end mb-3">
                        <a href="/WinnerSelection" class="btn btn-primary d-inline-flex align-items-center px-4 py-2 shadow-sm" style="border-radius: 12px; font-weight: 600; font-size: 1.05rem;">
                            <i class="bi bi-trophy me-2"></i> <span class="d-none d-sm-inline">Select Winner</span>
                        </a>
                    </div>
                </div>
                <div class="col-12">
                    <div class="card shadow-lg rounded-4 border-0 mb-4">
                        <div class="card-header bg-white border-0 px-3 px-md-4 py-3">
                            <div class="d-flex align-items-center flex-wrap gap-2">
                                <i class="bi bi-list-task fs-2 text-primary"></i>
                                <h3 class="fw-bold mb-0 flex-grow-1">Payment Status</h3>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive" style="overflow-x:auto;">
                                <table class="table table-hover align-middle mb-0" style="min-width: 340px;">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="text-nowrap">User Name</th>
                                            <th class="text-nowrap">Event Name</th>
                                            <th class="text-nowrap">Winner Announcement</th>
                                            <th class="text-end text-nowrap">Amount</th>
                                            <th class="text-center text-nowrap">Payment Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var evt in allEvents)
                                        {
                                            <tr>
                                                <td class="text-break">@evt.UserName</td>
                                                <td class="text-break">@evt.EventName</td>
                                                <td class="text-nowrap">@evt.WinnerAnnouncementDate.ToString("dd MMM yyyy")</td>
                                                <td class="fw-semibold text-success text-end">â‚¹@evt.Amount</td>
                                                <td class="text-center">
                                                    @if (evt.PaymentStatus == "Paid") {
                                                        <span class="badge bg-success">Paid</span>
                                                    } else if (evt.PaymentStatus == "Pending") {
                                                        <span class="badge bg-warning text-dark">Pending</span>
                                                    } else if (evt.PaymentStatus == "Failed") {
                                                        <span class="badge bg-danger">Failed</span>
                                                    } else {
                                                        <span class="badge bg-secondary">Not Paid</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                @if (totalPages > 1)
                {
                    <nav aria-label="Admin pagination" class="mb-4">
                        <ul class="pagination justify-content-center flex-wrap">
                            <li class="page-item @(pageNumber == 1 ? "disabled" : "")">
                                <a class="page-link" href="?pageNumber=@(pageNumber - 1)" tabindex="-1">Previous</a>
                            </li>
                            @for (int i = 1; i <= totalPages; i++)
                            {
                                <li class="page-item @(i == pageNumber ? "active" : "")">
                                    <a class="page-link" href="?pageNumber=@i">@i</a>
                                </li>
                            }
                            <li class="page-item @(pageNumber == totalPages ? "disabled" : "")">
                                <a class="page-link" href="?pageNumber=@(pageNumber + 1)">Next</a>
                            </li>
                        </ul>
                    </nav>
                }
            }
            @if (!IsAdmin)
            {
                <!-- Event Message Bar -->
                <div class="col-12 mb-3">
                    @if (Model.WinnerAnnouncementDate > DateTime.Now)
                    {
                        <div class="alert alert-info d-flex align-items-center shadow-sm rounded-4 border-0" role="alert">
                            <i class="bi bi-calendar-event fs-4 text-primary me-3"></i>
                            <div>
                                Event Date: <strong>@Model.WinnerAnnouncementDate.ToString("dd MMM yyyy")</strong>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success d-flex align-items-center shadow-sm rounded-4 border-0" role="alert">
                            <i class="bi bi-trophy fs-4 text-warning me-3"></i>
                            <div>
                                Winner: <strong>@Model.WinnerName</strong>
                            </div>
                        </div>
                    }
                </div>
                <!-- Event Details Card -->
                <div class="col-12 col-lg-6">
                    <div class="card shadow-lg rounded-4 border-0 h-100">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-calendar-event fs-2 text-primary me-3"></i>
                                <h3 class="fw-bold mb-0">Event Details</h3>
                            </div>
                            <table class="table table-borderless mb-0">
                                <tbody>
                                    <tr>
                                        <th class="text-muted">Event Name:</th>
                                        <td class="fw-semibold">@Model.EventName</td>
                                    </tr>
                                    <tr>
                                        <th class="text-muted">Winner Announcement:</th>
                                        <td>@Model.WinnerAnnouncementDate.ToString("dd MMM yyyy")</td>
                                    </tr>
                                    <tr>
                                        <th class="text-muted">Payment Status:</th>
                                        <td>
                                            @if (Model.PaymentStatus == "Paid") {
                                                <span class="badge bg-success">Paid</span>
                                            } else if (Model.PaymentStatus == "Pending") {
                                                <span class="badge bg-warning text-dark">Pending</span>
                                            } else {
                                                <span class="badge bg-danger">Failed</span>
                                            }
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- Payment Details Card -->
                <div class="col-12 col-lg-6 mb-4">
                    <div class="card shadow-lg rounded-4 border-0 h-100">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-credit-card fs-2 text-primary me-3"></i>
                                <h3 class="fw-bold mb-0">Payment Details</h3>
                            </div>
                            @if (Model.UserPaymentDetail != null)
                            {
                                <table class="table table-borderless mb-0">
                                    <tbody>
                                        <tr>
                                            <th class="text-muted">Status:</th>
                                            <td>
                                                @if (Model.UserPaymentDetail.PaymentStatus == "Paid") {
                                                    <span class="badge bg-success">Paid</span>
                                                } else if (Model.UserPaymentDetail.PaymentStatus == "Failed") {
                                                    <span class="badge bg-danger">Failed</span>
                                                } else {
                                                    <span class="badge bg-warning text-dark">Pending</span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <th class="text-muted">Amount:</th>
                                            <td class="fw-semibold">â‚¹@Model.UserPaymentDetail.Amount</td>
                                        </tr>
                                        <tr>
                                            <th class="text-muted">Transaction ID:</th>
                                            <td class="small">@Model.UserPaymentDetail.TransactionId</td>
                                        </tr>
                                        <tr>
                                            <th class="text-muted">Paid On:</th>
                                            <td>@Model.UserPaymentDetail.PaidOn?.ToString("dd MMM yyyy HH:mm")</td>
                                        </tr>
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <div class="alert alert-warning text-center mb-0">No payment record found.</div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</main>
