@page "/Dashboard"
@model DashboardModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@inject SignInManager<IdentityUser> SignInManager

@{
    ViewData["Title"] = "Dashboard";
    var userName = User.Identity?.Name ?? "";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

@functions {
    public bool IsAdmin => Model.IsAdmin;
    public List<CV.Lottery.Areas.Identity.Pages.DashboardModel.EventSummary> AllEvents => Model.AllEvents;
}

<div class="container-fluid py-5">
    <div class="row justify-content-center align-items-start gy-4">
        @if (IsAdmin)
        {
            <div class="col-12">
                <div class="d-flex justify-content-end mb-3">
                    <a href="/WinnerSelection" class="btn btn-primary d-inline-flex align-items-center px-4 py-2 shadow-sm" style="border-radius: 12px; font-weight: 600; font-size: 1.05rem;">
                        <i class="bi bi-trophy me-2"></i> Select Winner
                    </a>
                </div>
            </div>
            <div class="col-12">
                <div class="card shadow-lg rounded-4 border-0 mb-4">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-list-task fs-2 text-primary me-3"></i>
                            <h3 class="fw-bold mb-0">Payment Status</h3>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>User Name</th>
                                        <th>Event Name</th>
                                        <th>Winner Announcement</th>
                                        <th>Amount</th>
                                        <th>Payment Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var evt in AllEvents)
                                    {
                                        <tr>
                                            <td>@evt.UserName</td>
                                            <td>@evt.EventName</td>
                                            <td>@evt.WinnerAnnouncementDate.ToString("dd MMM yyyy")</td>
                                            <td class="fw-semibold text-success">$@evt.Amount</td>
                                            <td>
                                                @if (evt.PaymentStatus == "Paid") {
                                                    <span class="badge bg-success">Paid</span>
                                                } else if (evt.PaymentStatus == "Pending") {
                                                    <span class="badge bg-warning text-dark">Pending</span>
                                                } else {
                                                    <span class="badge bg-danger">Failed</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }
        @if (!IsAdmin)
        {
            <!-- Event Message Bar -->
            <div class="col-12 mb-3">
                @if (Model.WinnerAnnouncementDate > DateTime.Now)
                {
                    <div class="alert alert-info d-flex align-items-center shadow-sm rounded-4 border-0" role="alert">
                        <i class="bi bi-calendar-event fs-4 text-primary me-3"></i>
                        <div>
                            Event Date: <strong>@Model.WinnerAnnouncementDate.ToString("dd MMM yyyy")</strong>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-success d-flex align-items-center shadow-sm rounded-4 border-0" role="alert">
                        <i class="bi bi-trophy fs-4 text-warning me-3"></i>
                        <div>
                            Winner: <strong>@Model.WinnerName</strong>
                        </div>
                    </div>
                }
            </div>
            <!-- Event Details Card -->
            <div class="col-12 col-lg-6">
                <div class="card shadow-lg rounded-4 border-0 h-100">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-calendar-event fs-2 text-primary me-3"></i>
                            <h3 class="fw-bold mb-0">Event Details</h3>
                        </div>
                        <table class="table table-borderless mb-0">
                            <tbody>
                                <tr>
                                    <th class="text-muted">Event Name:</th>
                                    <td class="fw-semibold">@Model.EventName</td>
                                </tr>
                                <tr>
                                    <th class="text-muted">Winner Announcement:</th>
                                    <td>@Model.WinnerAnnouncementDate.ToString("dd MMM yyyy")</td>
                                </tr>
                                <tr>
                                    <th class="text-muted">Payment Status:</th>
                                    <td>
                                        @if (Model.PaymentStatus == "Paid") {
                                            <span class="badge bg-success">Paid</span>
                                        } else if (Model.PaymentStatus == "Pending") {
                                            <span class="badge bg-warning text-dark">Pending</span>
                                        } else {
                                            <span class="badge bg-danger">Failed</span>
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- Payment Details Card -->
            <div class="col-12 col-lg-6">
                <div class="card shadow-lg rounded-4 border-0 h-100">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-credit-card-2-front fs-2 text-info me-3"></i>
                            <h3 class="fw-bold mb-0">Payment Details</h3>
                        </div>
                        <table class="table table-borderless mb-0">
                            <tbody>
                                <tr>
                                    <th class="text-muted">Card Number:</th>
                                    <td class="fw-semibold">1234 **** **** **** 7890</td>
                                </tr>
                                <tr>
                                    <th class="text-muted">Payment Amount:</th>
                                    <td class="fw-semibold text-success">$500</td>
                                </tr>
                                <tr>
                                    <th class="text-muted">Card Holder Name:</th>
                                    <td class="fw-semibold">Joy Patel</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
