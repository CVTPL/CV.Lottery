@page
@model CV.Lottery.Areas.Identity.Pages.EditEventModel
@{
    ViewData["Title"] = "Edit Event";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded-4 border-0 p-4">
                <h2 class="fw-bold mb-3">Edit Event</h2>
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Input.EventName" class="form-label">Event Name</label>
                        <input asp-for="Input.EventName" class="form-control" />
                        <span asp-validation-for="Input.EventName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.Amount" class="form-label">Amount</label>
                        <input asp-for="Input.Amount" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="Input.Amount" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-success">Save Changes</button>
                    <a asp-page="Dashboard" class="btn btn-secondary ms-2">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
