@page
@model CV.Lottery.Areas.Identity.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-lg rounded-4 border-0 p-4 text-center">
                <h2 class="fw-bold mb-3">Current Event</h2>
                <div class="mb-2">
                    <span class="fw-semibold">Event Name:</span> <span class="text-primary">@Model.EventName</span>
                </div>
                <div class="mb-3">
                    <span class="fw-semibold">Amount:</span> <span class="text-success">@Model.Amount.ToString("C")</span>
                </div>
                <form method="get" action="/Identity/NewRegisterPage">
                    <button type="submit" class="btn btn-primary fw-semibold px-4 py-2">Select</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
