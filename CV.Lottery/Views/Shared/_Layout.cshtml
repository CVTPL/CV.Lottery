<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lottery</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CV.Lottery.styles.css" asp-append-version="true" />
    <!-- Removed custom-theme.css and Google Fonts for classic Bootstrap look -->
    <link rel="stylesheet" href="~/css/hide-scrollbar.css" />
    <link rel="stylesheet" href="~/css/custom-primary.css" />
    <link rel="stylesheet" href="~/css/custom-navbar.css" />
    <link rel="stylesheet" href="~/css/custom-profile.css" />
    <link rel="stylesheet" href="~/css/custom-logout.css" />
    <link rel="stylesheet" href="~/css/loader.css" />
</head>
<body class="d-flex flex-column min-vh-100">
    <div id="global-loader-overlay">
        <div class="global-loader-spinner"></div>
    </div>
    @{
        var isAdmin = User.IsInRole("admin");
    }
    @if (User.Identity != null && User.Identity.IsAuthenticated && !Context.Request.Path.Value.ToLower().StartsWith("/identity/account/login") && !Context.Request.Path.Value.ToLower().StartsWith("/identity/account/register") && !Context.Request.Path.Value.ToLower().StartsWith("/identity/account/forgotpassword") && !Context.Request.Path.Value.ToLower().StartsWith("/identity/account/forgotpasswordconfirmation") && !Context.Request.Path.Value.ToLower().Contains("/identity/account/payment"))
    {
        @await Html.PartialAsync("_Navbar", new { isAdmin = isAdmin })
    }
    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @* @if (User.Identity != null && User.Identity.IsAuthenticated && !Context.Request.Path.Value.ToLower().StartsWith("/identity/account/login") && !Context.Request.Path.Value.ToLower().StartsWith("/identity/account/register") && !Context.Request.Path.Value.ToLower().StartsWith("/identity/account/forgotpassword") && !Context.Request.Path.Value.ToLower().StartsWith("/identity/account/forgotpasswordconfirmation") && !Context.Request.Path.Value.ToLower().Contains("/identity/account/payment"))
    {
        @await Html.PartialAsync("_Footer")
    } *@
    <footer class="footer mt-auto py-1 bg-light border-top" style="font-size: 0.95rem;">
        <div class="container text-center">
            <span class="text-muted">&copy; @DateTime.Now.Year Lottery. All rights reserved.</span>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/loader.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
